@model FE_Pryecto_FInalAPI.Models.Ruta

@{
    ViewData["Title"] = "AbrirModificarRuta";
}

<h1>AbrirModificarRuta</h1>

<h4>Ruta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificarRuta" asp-controller="Ruta" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreRuta" class="control-label"></label>
                <input asp-for="NombreRuta" class="form-control" readonly />
                <span asp-validation-for="NombreRuta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadParadas" class="control-label"></label>
                <input asp-for="CantidadParadas" class="form-control" required />
                <span asp-validation-for="CantidadParadas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoPasaje" class="control-label"></label>
                <input asp-for="MontoPasaje" class="form-control" readonly />
                <span asp-validation-for="MontoPasaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarRutas" asp-controller="Ruta">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
