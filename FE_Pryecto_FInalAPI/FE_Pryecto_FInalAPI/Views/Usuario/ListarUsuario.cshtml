@model IEnumerable<FE_Pryecto_FInalAPI.Models.Usuario>

@{
    ViewData["Title"] = "ListarUsuario";
}

<h1>ListarUsuario</h1>

<p>
    <a asp-action="AbrirNuevoUsuario" asp-controller="Usuario" class="btn bg-info text-white">Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "EliminarUsuario", new { cedula = item.Cedula }, new { @class = "btn btn-danger ml-2" })
            </td>
        </tr>
}
    </tbody>
</table>
