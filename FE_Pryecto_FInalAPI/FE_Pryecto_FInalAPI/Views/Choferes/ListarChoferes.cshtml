@model IEnumerable<FE_Pryecto_FInalAPI.Models.Choferes>

@{
    ViewData["Title"] = "ListarChoferes";
}

<h1>Listar Choferes</h1>

<p>
    <a asp-action="AbrirNuevoChoferes" asp-controller="Choferes" class="btn bg-info text-white">Nuevo Chofer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpLicencia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpLicencia)
            </td>
            <td>
                @Html.ActionLink("Modificar", "AbrirModificarUnidadAsignada", new { id=item.Id, codempleado=item.CodEmpleado, nombre=item.Nombre, apellido=item.Apellido, explicencia=item.ExpLicencia }, new { @class = "btn btn-warning mr-2" }) |
                @Html.ActionLink("Eliminar", "EliminarChoferes", new { codempleado = item.CodEmpleado }, new { @class = "btn btn-danger ml-2" })
            </td>
        </tr>
}
    </tbody>
</table>
