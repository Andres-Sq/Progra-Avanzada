@model FE_Pryecto_FInalAPI.Models.RutaChofer

@{
    ViewData["Title"] = "AbrirModificarRutaChofer";
}

<h1>AbrirModificarRutaChofer</h1>

<h4>RutaChofer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificarRutaChofer" asp-controller="RutaChofer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodEmpleado" class="control-label"></label>
                <input asp-for="CodEmpleado" class="form-control" readonly />
                <span asp-validation-for="CodEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreRuta" class="control-label"></label>
                <input asp-for="NombreRuta" class="form-control" readonly />
                <span asp-validation-for="NombreRuta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPasajeros" class="control-label"></label>
                <input asp-for="CantidadPasajeros" class="form-control" required />
                <span asp-validation-for="CantidadPasajeros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoPasaje" class="control-label"></label>
                <input asp-for="MontoPasaje" class="form-control" readonly />
                <span asp-validation-for="MontoPasaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarRutaChofer" asp-controller="RutaChofer">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
